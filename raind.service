[Unit]
Description=Daemon for exposing attached rain sensors via Pyro.
After=syslog.target
Wants=network-online.target
After=network-online.target

[Service]
Restart=on-failure
Type=simple
ExecStart=/usr/bin/env python3 -u /usr/local/bin/raind
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
